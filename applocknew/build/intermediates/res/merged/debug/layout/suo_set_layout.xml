<?xml version="1.0" encoding="utf-8"?>


<com.suo.applock.view.MyRelativeLayout android:id="@+id/suo_app_m"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/suo_list_backg"
    android:orientation="vertical"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <include layout="@layout/suo_title_bar" />

        <ListView
            android:id="@+id/suo_list_v"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:choiceMode="multipleChoice"
            android:divider="@drawable/suo_list_de_set"
            android:dividerHeight="1px"
            android:fastScrollEnabled="false"
            android:longClickable="false"
            android:padding="8dp"
             />


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="215dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:id="@+id/lockscreen_tips_ll"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center">
            <ImageView
                android:id="@+id/lockscreen_tips_im"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/suo_fff"
                android:background="@color/suo_list_backg"
                />
            <TextView
                android:id="@+id/lockscreen_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/suo_file_nor"
                android:textColor="@color/suo_te_3"
                android:layout_gravity="center"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/suo_jindu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <include layout="@layout/suo_bt_title_bar" />
        <ImageButton android:layout_width="match_parent"
                     android:layout_height="48dp"
                     android:id="@+id/lockscreen_add"
                     android:visibility="gone"
                     android:background="@drawable/suo_bt_backg_"
                />
    </com.suo.applock.view.MyRelativeLayout>


