<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="50dp">
<FrameLayout
    android:id="@+id/action_bar"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingRight="8dp"
    android:background="@color/suo_app_pri"
    android:foregroundGravity="center">

    <LinearLayout
        android:id="@+id/lockscreen_normal_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/suo_title_bar_te"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/suo_bt_backg_"
            android:clickable="true"
            android:gravity="start|center_vertical"
            android:text="haha"
            android:layout_marginLeft="20dp"
            android:paddingRight="10dp"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" />

        <ImageButton
            android:id="@+id/suo_et_m"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/suo_bt_backg_"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />

        <ImageButton
            android:id="@+id/suo_set_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/suo_bt_backg_"
            android:src="@drawable/suo_rigth_bt" />
    </LinearLayout>
</FrameLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shape_title"/>
</LinearLayout>