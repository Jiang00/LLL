<?xml version="1.0" encoding="utf-8"?>


    <com.suo.applock.view.MyRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/suo_app_m"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <include layout="@layout/suo_title_bar"/>

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/suo_frag_co"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/suo_hm_gan"
                    android:visibility="gone"
                    android:clickable="true"
                    android:id="@+id/suo_back_sl"/>

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:id="@+id/suo_main_me"
                    />
        </FrameLayout>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:id="@+id/lockscreen_tips"
            android:textColor="@color/suo_te_3"
                android:text="@string/suo_file_nor"
                android:gravity="center"
                android:background="@color/suo_list_backg"/>
    </com.suo.applock.view.MyRelativeLayout>
