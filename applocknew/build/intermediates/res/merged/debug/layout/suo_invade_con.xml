<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/suo_title_bar"/>
    <ListView
        android:id="@+id/suo_list_v"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@drawable/suo__invade_list"
        android:dividerHeight="0px"
        />
    <LinearLayout
        android:background="@color/suo_backg_2"
        android:id="@+id/suo_backg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center">

    <ImageView
    android:layout_gravity="center_horizontal"
    android:background="@drawable/suo_invade_no_b"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    <TextView
    android:layout_marginTop="8dp"
    android:textColor="@color/suo_te_3"
    android:textSize="18sp"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/suo_invade_em"
    />

    <TextView
    android:layout_marginTop="8dp"
    android:textColor="@color/suo_te_4"
    android:textSize="15sp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/suo_intru_i"
    />

    </LinearLayout>
    <CheckBox
        android:id="@+id/suo_invade_ss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/suo_intru"
        android:textColor="@color/suo_te_2"
        android:visibility="gone"
        />
</LinearLayout>