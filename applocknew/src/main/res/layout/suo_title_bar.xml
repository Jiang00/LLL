<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="50dp">
<FrameLayout
             xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/action_bar"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/suo_app_pri"
    android:paddingRight="7dp"
    android:foregroundGravity="center">

    <LinearLayout
        android:id="@+id/lockscreen_normal_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/suo_title_bar_te"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/suo_bt_backg_"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            android:paddingRight="10dp"

            android:gravity="start|center_vertical"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:id="@+id/suo_up"
            android:scaleType="fitCenter"
            android:visibility="gone"
            tools:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/suo_bt_backg_"

            />

        <ImageButton
            android:id="@+id/suo_et_m"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/suo_bt_backg_"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/suo_title_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/suo_bt_backg_"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:paddingRight="10dp"
            />

        <ImageButton
            android:id="@+id/suo_set_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/suo_bt_backg_"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/suo_rigth_bt"
            />

        <ImageButton
            android:id="@+id/lockscreen_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/suo_bt_backg_"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/lockscreen_search_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone">

        <EditText
            android:id="@+id/suo_title_bar_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/suo_focused_holo_dark"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/suo_sousuo_hint"
            android:textColorHint="@android:color/white"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/suo_bc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="5dp"
            />
    </FrameLayout>

</FrameLayout>
<ImageView
android:layout_width="match_parent"
android:layout_height="2dp"
android:background="@drawable/shape_title"/>
    </LinearLayout>