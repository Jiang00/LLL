<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:gravity="center"
              xmlns:tools="http://schemas.android.com/tools"
    >
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/suo_backg_tt"
            android:layout_width="312dp"
            android:layout_height="185dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            >

            <com.suo.applock.view.AnimImageView
                android:id="@+id/scan_result_preview1"
                android:layout_height="40px"
                android:layout_width="40px"
                android:layout_marginLeft="12px"
                android:scaleType="centerCrop"
                tools:background="@drawable/suo_ic"
                android:visibility="gone"
                />

            <com.suo.applock.view.AnimImageView
                android:id="@+id/scan_result_preview2"
                android:layout_height="40px"
                android:layout_width="40px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:scaleType="centerCrop"
                tools:background="@drawable/suo_ic"
                android:visibility="gone"
                />

            <com.suo.applock.view.AnimImageView
                android:id="@+id/scan_result_preview3"
                android:layout_height="40px"
                android:layout_width="40px"
                android:scaleType="centerCrop"
                tools:background="@drawable/suo_ic"
                android:visibility="gone"
                />

            <com.suo.applock.view.AnimImageView
                android:id="@+id/scan_result_preview4"
                android:layout_height="40px"
                android:layout_width="40px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:background="@drawable/suo_ic"
                />

            <TextView
                android:id="@+id/scan_result_preview_etc"
                android:layout_width="wrap_content"
                android:layout_height="40px"
                android:gravity="center"
                android:text="..."
                android:visibility="gone"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                />
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:id="@+id/suo_tt_tishi"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textSize="15sp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textColor="@color/suo_te_1"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/suo_incade_i"
        />
    <Button
        android:id="@+id/suo_invad_got"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/suo_inavde_b"
        android:text="@string/suo_got"
        android:background="@drawable/suo_sc_result_bt"
        />
</LinearLayout>